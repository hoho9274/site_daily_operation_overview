# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_VERSION=v1
REACT_APP_ENVIRONMENT=development

# Authentication
REACT_APP_AUTH_DOMAIN=your-auth-domain.auth0.com
REACT_APP_AUTH_CLIENT_ID=your-client-id
REACT_APP_AUTH_AUDIENCE=your-api-audience
REACT_APP_AUTH_REDIRECT_URI=http://localhost:3000/callback

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/site_daily_operations
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# External Services
REACT_APP_ANALYTICS_ID=your-google-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CRASH_REPORTING=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_OFFLINE_MODE=true

# Development Tools
REACT_APP_ENABLE_DEV_TOOLS=true
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# Security
REACT_APP_CSP_NONCE=your-csp-nonce
REACT_APP_HASH_SALT=your-hash-salt

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=false
REACT_APP_CACHE_VERSION=1.0.0

# Testing
REACT_APP_TEST_MODE=false
REACT_APP_MOCK_API=false

# Logging
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Timeouts
REACT_APP_API_TIMEOUT=30000
REACT_APP_UPLOAD_TIMEOUT=300000

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100
