{
  "name": "site-daily-operation-overview",
  "version": "1.0.0",
  "description": "A comprehensive web application for managing daily operations and site management tasks",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:update-snapshots": "jest --updateSnapshot",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:build:ios:release": "detox build --configuration ios.sim.release",
    "e2e:build:android:release": "detox build --configuration android.emu.release",
    "e2e:test:ios:release": "detox test --configuration ios.sim.release",
    "e2e:test:android:release": "detox test --configuration android.emu.release",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "type-check": "tsc --noEmit",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "docs:build": "docusaurus build",
    "docs:start": "docusaurus start",
    "docs:serve": "docusaurus serve",
    "docs:deploy": "docusaurus deploy",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "clean": "rm -rf build dist coverage .nyc_output",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/louiswhlui/site_daily_operation_overview.git"
  },
  "keywords": [
    "daily-operations",
    "site-management",
    "web-application",
    "react",
    "typescript"
  ],
  "author": "Louis Whlui <louiswhlui@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/louiswhlui/site_daily_operation_overview/issues"
  },
  "homepage": "https://github.com/louiswhlui/site_daily_operation_overview#readme",
  "dependencies": {
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "ajv": "^8.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "clsx": "^1.2.1",
    "concurrently": "^7.6.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-html-reporters": "^3.1.1",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "serve": "^14.2.0",
    "wait-on": "^7.0.1",
    "webpack-bundle-analyzer": "^4.7.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./coverage/html-report",
          "filename": "report.html",
          "expand": true
        }
      ],
      [
        "jest-junit",
        {
          "outputDirectory": "./coverage",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  }
}
